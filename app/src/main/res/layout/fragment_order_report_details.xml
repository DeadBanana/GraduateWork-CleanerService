<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OrderReportDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фотоотчет:"
                android:textSize="20sp"
                android:textColor="@color/pure_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/linear_layout_transparent_style">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/OrderReportDetailFragmentLLImageContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/image_container_background"
                        android:padding="8dp"
                        android:minHeight="50sp">
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Комментарий клинера:"
                android:textSize="20sp"
                android:textColor="@color/pure_gray"/>

            <TextView
                android:id="@+id/OrderReportDetailFragmentTVComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Комментарий клинера:"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>